@model Examen2UTaskLog.Models.Assignment

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Asignaciones</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AssignmentId" />
            <div class="form-group">
                <label asp-for="AssignmentkName" class="control-label"></label>
                <input asp-for="AssignmentkName" class="form-control" />
                <span asp-validation-for="AssignmentkName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AssignmentDescription" class="control-label"></label>
                <input asp-for="AssignmentDescription" class="form-control" />
                <span asp-validation-for="AssignmentDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AssignmentInitialDate" class="control-label"></label>
                <input asp-for="AssignmentInitialDate" class="form-control" />
                <span asp-validation-for="AssignmentInitialDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AssignmentEndDate" class="control-label"></label>
                <input asp-for="AssignmentEndDate" class="form-control" />
                <span asp-validation-for="AssignmentEndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="State.StateName" class="control-label"></label>
                <select asp-for="StateId" class="form-control" asp-items="ViewBag.StateId"></select>
                <span asp-validation-for="StateId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tag.TagName" class="control-label"></label>
                <select asp-for="TagId" class="form-control" asp-items="ViewBag.TagId"></select>
                <span asp-validation-for="TagId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TaskList.TaskListName" class="control-label"></label>
                <select asp-for="TaskListId" class="form-control" asp-items="ViewBag.TaskListId"></select>
                <span asp-validation-for="TaskListId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-outline-primary" />
                <a asp-action="Index" class="btn btn-outline-warning">Regresar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
